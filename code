#GAMEPLAY
#-------------------------------------------------------------------------------------------------------------------------------------------
#BUY
def buy():
    if pm.get() == 2:
        for x in range(0, 22):
            if liste[x][0] == p1_pos.get():
                if liste[x][1].get() == 0:
                    p1_money.set((p1_money.get()) - (liste[x][2].get()))
                    p1_money_text.set(str(p1_money.get())+"$")
                    liste[x][1].set(1)
                    screen_text.set("obiekt przejęty przez gracza 1")
    elif pm.get() == 1:
        for x in range(0, 22):
            if liste[x][0] == p2_pos.get():
                if liste[x][1].get() == 0:
                    p2_money.set((p2_money.get()) - (liste[x][2].get()))
                    p2_money_text.set(str(p2_money.get())+"$")
                    liste[x][1].set(2)
                    screen_text.set("obiekt przejęty przez gracza 2")

#PLEDGE
def pledge():
    for x in range (0, 22):
        if liste[x][5] == give_id.get():
            #PLEDGE1
            if liste[x][1].get() == 1:
                p1_money.set((p1_money.get()) + (liste[x][4].get()))
                p1_money_text.set(str(p1_money.get())+"$")
                liste[x][1].set(3)
                screen_text.set("gracz 1 zastawił obiekt")
            #RE_PLEDGE1
            elif liste[x][1].get() == 3:
                p1_money.set((p1_money.get()) - (liste[x][4].get()))
                p1_money_text.set(str(p1_money.get())+"$")
                liste[x][1].set(1)
                screen_text.set("gracz 1 wykupił obeikt z zastawu")
            #PLEDGE2
            elif liste[x][1].get() == 2:
                p2_money.set((p2_money.get()) + (liste[x][4].get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(4)
                screen_text.set("gracz 2 zastawił obiekt")
            #RE_PLEDGE2
            elif liste[x][1].get() == 4:
                p2_money.set((p2_money.get()) - (liste[x][4].get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(2)
                screen_text.set("gracz 2 wykupił obeikt z zastawu")

def sell():
    for x in range (0, 22):
        if liste[x][5] == give_id.get():
            #SELL1
            if liste[x][1].get() == 1:
                p1_money.set((p1_money.get()) + int(give_price.get()))
                p1_money_text.set(str(p1_money.get())+"$")
                p2_money.set((p2_money.get()) - int(give_price.get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(2)
                screen_text.set("gracz 1 sprzedał obeikt")
            #SELL2
            elif liste[x][1].get() == 2:
                p1_money.set((p1_money.get()) - int(give_price.get()))
                p1_money_text.set(str(p1_money.get())+"$")
                p2_money.set((p2_money.get()) + int(give_price.get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(1)
                screen_text.set("gracz 2 sprzedał obeikt")

#INTERFACE
#-------------------------------------------------------------------------------------------------------------------------------------------
