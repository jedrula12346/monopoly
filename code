pl2nic = tk.StringVar();

pl1 = tk.Label(window, font = 30, bg = "light steel blue", text = "Podaj nick:")
pl1.place(relx = 0.0, rely = 0.0, anchor = 'nw')

pl1_nic = tk.Entry(window, font = 30)
pl1_nic.place(relx = 0.07, rely = 0.0, anchor = 'nw')

pl2 = tk.Label(window, font = 30, bg = "light steel blue", text = "Podaj nick:")
pl2.place(relx = 0.0, rely = 0.04, anchor = 'nw')

