pl2_nic.place(relx = 0.07, rely = 0.04, anchor = 'nw')

def getp():
    pl1nic.set("1 - "+pl1_nic.get())
    pl2nic.set("2 - "+pl2_nic.get())

pl_get = tk.Button(window, text = "OK", bg = "white", command = getp)
pl_get.place(relx = 0.21, rely = 0.02, anchor = 'nw')

