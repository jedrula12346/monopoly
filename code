#MOVE
#----------------------------------------------------------------------------------------------------------------
valued1 = tk.IntVar();
valued1.set(1)

valued2 = tk.IntVar();
valued2.set(1)

valued = tk.IntVar();
valued.set(1)

p1_pos = tk.IntVar();
p1_pos.set(1)

p2_pos = tk.IntVar();
p2_pos.set(1)

pm = tk.IntVar();
pm.set(1)

#P1_M---------------------------------------------------------------------------------------------------------------

def los():

#P1_GO_TO_PRISON
    if p1_pos.get() == 31:
        screen_text.set("ruch gracza 2")
        p1_pos.set(0)
        l10_m.set((l10_m.get()).replace("1", ""))
        prison_m.set((prison_m.get()) + "1")
        pm.set(2)
    
    elif pm.get() == 1 and ("1" in prison_m.get()) == False:
        screen_text.set("ruch gracza 2")
        #valued1.set(randint(1, 6))
        valued1.set(1)
        p1_pos.set(p1_pos.get() + valued1.get())

        helpp = tk.Label(textvariable = p1_pos)
        helpp.place(relx = 0.0, rely = 0.3)

        if p1_pos.get() >= 41:
            p1_pos.set(p1_pos.get() - 40)
            for i in range(0, 8):
                if i == p1_pos.get() - 1:
                    listm[i].set((listm[i].get()) + "1")
                    for j in range(0, 40):
                        if j != i:
                            listm[j].set((listm[j].get()).replace("1", ""))
            p1_money.set(p1_money.get()  +2000)
            p1_money_text.set(str(p1_money.get()) + "$")
            #TAX
            if p1_pos.get() == 5:
                p1_money.set(p1_money.get() - 2000)
                p1_money_text.set(str(p1_money.get()) + "$")

            if p1_pos.get() == 39:
                p1_money.set(p1_money.get() - 1000)
                p1_money_text.set(str(p1_money.get()) + "$")

        elif p1_pos.get() <= 41:
            for i in range(0, 40):
                if i == p1_pos.get() - 1:
                    listm[i].set((listm[i].get()) + "1")
                    for j in range(0, 40):
                        if j != i:
                            listm[j].set((listm[j].get()).replace("1", ""))
            #TAX
            if p1_pos.get() == 5:
                p1_money.set(p1_money.get() - 2000)
                p1_money_text.set(str(p1_money.get()) + "$")

            if p1_pos.get() == 39:
                p1_money.set(p1_money.get() - 1000)
                p1_money_text.set(str(p1_money.get()) + "$")
        #P2P
        for x in range(0, 22):
            if liste[x][0] == p1_pos.get():
                if liste[x][1].get() == 2:
                    p1_money.set((p1_money.get()) - (liste[x][3].get()))
                    p1_money_text.set(str(p1_money.get()) + "$")
                    p2_money.set((p2_money.get()) + (liste[x][3].get()))
                    p2_money_text.set(str(p2_money.get()) + "$")
        pm.set(2)
        valued.set(valued1.get())

#P1_PRISON_M
    elif pm.get() == 1 and ("1" in prison_m.get()) == True:
        screen_text.set("ruch gracza 2")
        if tryy1.get() == 1:
            throw1 = randint(1, 6)
            throw2 = randint(1, 6)
            valued.set(str(throw1) + " " + str(throw2))
            if throw1 == throw2:
                prison_m.set((prison_m.get()).replace("1", ""))
                p1_pos.set(11)
                listm[10].set((listm[10].get()) + "1")
                tryy1.set(1)
                pm.set(2)
            else:
                tryy1.set(2)
                pm.set(2)
                
        elif tryy1.get() == 2:
            throw1 = randint(1, 6)
            throw2 = randint(1, 6)
            valued.set(str(throw1) + " " + str(throw2))
            if throw1 == throw2:
                prison_m.set((prison_m.get()).replace("1", ""))
                p1_pos.set(11)
                listm[10].set((listm[10].get()) + "1")
                tryy1.set(1)
                pm.set(2)
            else:
                tryy1.set(3)
                pm.set(2)

        elif tryy1.get() == 3:
            throw1 = randint(1, 6)
            throw2 = randint(1, 6)
            valued.set(str(throw1) + " " + str(throw2))
            if throw1 == throw2:
                prison_m.set((prison_m.get()).replace("1", ""))
                p1_pos.set(11)
                listm[10].set((listm[10].get()) + "1")
                tryy1.set(1)
                pm.set(2)
            else:
                p1_money.set(p1_money.get() - 500)
                p1_money_text.set(str(p1_money.get()) + "$")
                tryy1.set(1)
                prison_m.set((prison_m.get()).replace("1", ""))
                p1_pos.set(11)
                listm[10].set((listm[10].get()) + "1")
                pm.set(2)

#P2_M---------------------------------------------------------------------------------------------------------------

#P2_GO_TO_PRISON
    elif p2_pos.get() == 31:
        screen_text.set("ruch gracza 1")
        p2_pos.set(0)
        l10_m.set((l10_m.get()).replace("2", ""))
        prison_m.set((prison_m.get()) + "2")

    elif pm.get() == 2 and ("2" in prison_m.get()) == False:
        screen_text.set("ruch gracza 1")
        #valued2.set(randint(1, 6))
        valued2.set(1)
        p2_pos.set(p2_pos.get() + valued2.get())

        helppp = tk.Label(textvariable = p2_pos)
        helppp.place(relx = 0.0, rely = 0.35)

        if p2_pos.get() >= 41:
            p2_pos.set(p2_pos.get() - 40)
            for i in range(0, 8):
                if i == p2_pos.get() - 1:
                    listm[i].set((listm[i].get()) + "2")
                    for j in range(0, 40):
                        if j != i:
                            listm[j].set((listm[j].get()).replace("2", ""))
            p2_money.set(p2_money.get() + 2000)
            p2_money_text.set(str(p2_money.get()) + "$")
            #TAX
            if p2_pos.get() == 5:
                p2_money.set(p2_money.get() - 2000)
                p2_money_text.set(str(p2_money.get()) + "$")

            if p2_pos.get() == 39:
                p2_money.set(p2_money.get() - 1000)
                p2_money_text.set(str(p2_money.get()) + "$")

        elif p2_pos.get() <= 41:
            for i in range(0, 40):
                if i == p2_pos.get() - 1:
                    listm[i].set((listm[i].get()) + "2")
                    for j in range(0, 40):
                        if j != i:
                            listm[j].set((listm[j].get()).replace("2", ""))
            #TAX
            if p2_pos.get() == 5:
                p2_money.set(p2_money.get() - 2000)
                p2_money_text.set(str(p2_money.get()) + "$")

            if p2_pos.get() == 39:
                p2_money.set(p2_money.get() - 1000)
                p2_money_text.set(str(p2_money.get()) + "$")
        #P2P
        for x in range(0, 22):
            if liste[x][0] == p2_pos.get():
                if liste[x][1].get() == 1:
                    p2_money.set((p2_money.get()) - (liste[x][3].get()))
                    p2_money_text.set(str(p2_money.get()) + "$")
                    p1_money.set((p1_money.get()) + (liste[x][3].get()))
                    p1_money_text.set(str(p1_money.get()) + "$")
        pm.set(1)
        valued.set(valued2.get())

#P2_PRISON_M
    elif pm.get() == 2 and ("2" in prison_m.get()) == True:
        screen_text.set("ruch gracza 1")
        if tryy2.get() == 1:
            throw1 = randint(1, 6)
            throw2 = randint(1, 6)
            valued.set(str(throw1) + " " + str(throw2))
            if throw1 == throw2:
                prison_m.set((prison_m.get()).replace("2", ""))
                p2_pos.set(11)
                listm[10].set((listm[10].get()) + "2")
                tryy2.set(1)
                pm.set(1)
            else:
                tryy2.set(2)
                pm.set(1)
                
        elif tryy2.get() == 2:
            throw1 = randint(1, 6)
            throw2 = randint(1, 6)
            valued.set(str(throw1) + " " + str(throw2))
            if throw1 == throw2:
                prison_m.set((prison_m.get()).replace("2", ""))
                p2_pos.set(11)
                listm[10].set((listm[10].get()) + "2")
                tryy2.set(1)
            else:
                tryy2.set(3)
                pm.set(1)

        elif tryy2.get() == 3:
            throw1 = randint(1, 6)
            throw2 = randint(1, 6)
            valued.set(str(throw1) + " " + str(throw2))
            if throw1 == throw2:
                prison_m.set((prison_m.get()).replace("2", ""))
                p2_pos.set(11)
                listm[10].set((listm[10].get()) + "2")
                tryy2.set(1)
                pm.set(1)
            else:
                p2_money.set(p2_money.get() - 500)
                p2_money_text.set(str(p2_money.get()) + "$")
                tryy2.set(1)
                prison_m.set((prison_m.get()).replace("2", ""))
                p2_pos.set(11)
                listm[10].set((listm[10].get()) + "2")
                pm.set(1)
     
