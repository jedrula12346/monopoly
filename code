#GAMEPLAY
#-------------------------------------------------------------------------------------------------------------------------------------------
#AIPORT_CHANGE_PAY
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
def air_pay():
    for x in range(0, 3):
        if lista[x][1].get() == 1:
           lista[x][5].set(250 * hmanyp1.get())
           screen_text.set(listd[22].get())
           listd[x + 22].set(str(buy_a1.get()) + "$\n" + str(lista[x][5].get()) + "$\n" + str(pledge_a1.get()) + "$")
        elif lista[x][1].get() == 2:
           lista[x][5].set(250 * hmanyp2.get())
           listd[x + 22].set(str(buy_a1.get()) + "$\n" + str(lista[x][5].get()) + "$\n" + str(pledge_a1.get()) + "$")

#---------------------------------------------------------------------------------------------------------------------------------------------------------------------
#BUY
def buy():
    if pm.get() == 2:
        for x in range(0, 22):
            for y in range(0, 3):
                if liste[x][0] == p1_pos.get():
                    if liste[x][1].get() == 0:
                        p1_money.set((p1_money.get()) - (liste[x][2].get()))
                        p1_money_text.set(str(p1_money.get())+"$")
                        liste[x][1].set(1)
                        screen_text.set("obiekt przejęty przez gracza 1")
                #AIRPORT
                elif lista[y][0] == p1_pos.get():
                    if lista[y][1].get() == 0:
                        p1_money.set((p1_money.get()) - (lista[y][2].get()))
                        p1_money_text.set(str(p1_money.get())+"$")
                        lista[y][1].set(1)
                        hmanyp1.set(hmanyp1.get() + 1)
                        screen_text.set("obiekt przejęty przez gracza 1")
                        air_pay()
                                    
    elif pm.get() == 1:
        for x in range(0, 22):
            for y in range(0, 3):
                if liste[x][0] == p2_pos.get():
                    if liste[x][1].get() == 0:
                        p2_money.set((p2_money.get()) - (liste[x][2].get()))
                        p2_money_text.set(str(p2_money.get())+"$")
                        liste[x][1].set(2)
                        screen_text.set("obiekt przejęty przez gracza 2")
                #AIRPORT
                elif lista[y][0] == p2_pos.get():
                    if lista[y][1].get() == 0:
                        p2_money.set((p2_money.get()) - (lista[y][2].get()))
                        p2_money_text.set(str(p2_money.get())+"$")
                        lista[y][1].set(2)
                        hmanyp2.set(hmanyp2.get() + 1)
                        screen_text.set("obiekt przejęty przez gracza 2")
                        air_pay()

#PLEDGE
def pledge():
    for x in range (0, 22):
        if liste[x][5] == give_id.get():
            #PLEDGE1
            if liste[x][1].get() == 1:
                p1_money.set((p1_money.get()) + (liste[x][4].get()))
                p1_money_text.set(str(p1_money.get())+"$")
                liste[x][1].set(3)
                screen_text.set("gracz 1 zastawił obiekt")
            #RE_PLEDGE1
            elif liste[x][1].get() == 3:
                p1_money.set((p1_money.get()) - (liste[x][4].get()))
                p1_money_text.set(str(p1_money.get())+"$")
                liste[x][1].set(1)
                screen_text.set("gracz 1 wykupił obeikt z zastawu")
            #PLEDGE2
            elif liste[x][1].get() == 2:
                p2_money.set((p2_money.get()) + (liste[x][4].get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(4)
                screen_text.set("gracz 2 zastawił obiekt")
            #RE_PLEDGE2
            elif liste[x][1].get() == 4:
                p2_money.set((p2_money.get()) - (liste[x][4].get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(2)
                screen_text.set("gracz 2 wykupił obeikt z zastawu")

#SELL
def sell():
    for x in range(0, 22):
        if liste[x][5] == give_id.get():
            #SELL1
            if liste[x][1].get() == 1 and give_price.get() != None:
                p1_money.set((p1_money.get()) + int(give_price.get()))
                p1_money_text.set(str(p1_money.get())+"$")
                p2_money.set((p2_money.get()) - int(give_price.get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(2)
                screen_text.set("gracz 1 sprzedał obeikt")
            #SELL2
            elif liste[x][1].get() == 2 and give_price.get() != None:
                p1_money.set((p1_money.get()) - int(give_price.get()))
                p1_money_text.set(str(p1_money.get())+"$")
                p2_money.set((p2_money.get()) + int(give_price.get()))
                p2_money_text.set(str(p2_money.get())+"$")
                liste[x][1].set(1)
                screen_text.set("gracz 2 sprzedał obeikt")

#BUILD
def build():
    for x in range(0, 22):
        if liste[x][5] == give_id.get():
            #BUILD1
            if liste[x][1].get() == 1:
                p1_money.set((p1_money.get()) - liste[x][6].get())
                p1_money_text.set(str(p1_money.get())+"$")
                if listb[x][1] < 4:
                    listb[x][listb[x][1]+2].configure(bg = "green")
                    liste[x][3].set(listb_v[x][listb[x][1]])
                    listd[x].set(str(liste[x][2].get()) + "$\n" + str(liste[x][3].get()) + "$\n" + str(liste[x][6].get()) + "$\n" + str(liste[x][4].get()) + "$")
                    listb[x][1] = listb[x][1] + 1
                elif listb[x][1] == 4:
                    for u in range(2, 6):
                        listb[x][u].configure(bg = "red")
                    liste[x][3].set(listb_v[x][listb[x][1]])
                    listd[x].set(str(liste[x][2].get()) + "$\n" + str(liste[x][3].get()) + "$\n" + str(liste[x][6].get()) + "$\n" + str(liste[x][4].get()) + "$")
            #BUILD2
            elif liste[x][1].get() == 2:
                p2_money.set((p2_money.get()) - liste[x][6].get())
                p2_money_text.set(str(p2_money.get())+"$")
                if listb[x][1] < 4:
                    listb[x][listb[x][1]+2].configure(bg = "green")
                    liste[x][3].set(listb_v[x][listb[x][1]])
                    listd[x].set(str(liste[x][2].get()) + "$\n" + str(liste[x][3].get()) + "$\n" + str(liste[x][6].get()) + "$\n" + str(liste[x][4].get()) + "$")
                    listb[x][1] =listb[x][1] + 1
                elif listb[x][1] == 4:
                    for u in range(2, 6):
                        listb[x][u].configure(bg = "red")
                    liste[x][3].set(listb_v[x][listb[x][1]])
                    listd[x].set(str(liste[x][2].get()) + "$\n" + str(liste[x][3].get()) + "$\n" + str(liste[x][6].get()) + "$\n" + str(liste[x][4].get()) + "$")          
                    
